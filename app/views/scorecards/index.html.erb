<h1>Scorecards</h1>

<nav class="scorecard-page">
	<%= link_to 'Home', root_path %><br>
	<%= link_to 'New Score Card', new_scorecard_path %><br>
	
</nav>


<!-- div -->
<table class="table table-striped">
	<thead>
	</thead>
	<tbody>
		<% @scorecards.each do |card| %>
			<tr>
				<td><%= link_to "#{card.courseplayed}", scorecard_path(card) %></td>
				<td><%= link_to "#{card.date}", scorecard_path(card) %></td>
				<td><%= link_to 'Edit Scorecard', edit_scorecard_path(card) %></td>
				<td><%= link_to 'Delete', method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<!-- /div -->

